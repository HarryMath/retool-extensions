{
  "manifest_version": 3,
  "name": "App Code Search",
  "version": "1.1",
  "description": "Полнотекстовый поиск по приложениям Retool",
  "permissions": [
    "cookies",
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://admin.walletbot.net/*",
    "https://retool.stand21.walletteam.org/*",
    "https://retool-new.walletteam.org/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  }
}